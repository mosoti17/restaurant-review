<div class="container">
  {{#if addNewReview}}
  <div >
    <form >
      <div class="form-group">
        <label for="author">author</label>
        {{input value=author id="author" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="title">title</label>
        {{input value=title id="title" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="rating">rating</label>
        {{input value=rating id="rating" type="number" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="message">message</label>
        {{input value=message id="message" class="form-control"}}
      </div>

    </form>
    <button {{action 'addReview'}}>Add Review</button>
    <button {{action 'cancel'}}>Cancel</button>
  </div>
  {{else}}
<button {{action 'showReviewForm'}}>Add Review</button>
{{/if}}
</div>
